# Real_MFA Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ==============================================================================
# DJANGO CORE Settings
# ==============================================================================
ENVIRONMENT=development
DEBUG=False
SECRET_KEY=your-very-secret-key-here-change-in-production

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# ==============================================================================
# DATABASE - PostgreSQL (Production)
# ==============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=real_mfa_db
DB_USER=real_mfa_user
DB_PASSWORD=change-this-strong-password
DB_HOST=localhost
DB_PORT=5432

# For SQLite (Development only)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# ==============================================================================
# REDIS - Cache & Celery Broker
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================================================
# CELERY - Background Task Queue
# ==============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# ==============================================================================
# EMAIL Settings (Gmail Example)
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@realmfa.com

# For Development (Console Backend)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ==============================================================================
# Frontend URLs
# ==============================================================================
FRONTEND_URL=https://your-frontend-domain.com
FRONTEND_CALLBACK_URL=https://your-frontend-domain.com/auth/callback

# ==============================================================================
# CORS Settings (Comma-separated URLs)
# ==============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# ==============================================================================
# OTP & MFA Settings
# ==============================================================================
TOTP_ISSUER_NAME=Real_MFA
TOTP_ALLOW_INSECURE=False

# ==============================================================================
# SMS Configuration (Twilio - Optional)
# ==============================================================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================================================
# JWT Configuration (Optional)
# ==============================================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256

# ==============================================================================
# AWS S3 Configuration (Optional - for media storage)
# ==============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ==============================================================================
# Static & Media Files (Production)
# ==============================================================================
STATIC_ROOT=/var/www/real_mfa/staticfiles
MEDIA_ROOT=/var/www/real_mfa/media

# ==============================================================================
# Security Headers (Production)
# ==============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=INFO

# ==============================================================================
# Sentry (Error Tracking - Optional)
# ==============================================================================
USE_SENTRY=False
SENTRY_DSN=

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_OTP=6/hour
RATE_LIMIT_LOGIN=10/hour
RATE_LIMIT_API=100/hour
