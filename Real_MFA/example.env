# =============================================================================
# Real_MFA Django Settings - EXAMPLE (.env) File
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!
# =============================================================================

# ----------------------- DJANGO CORE SETTINGS -----------------------
SECRET_KEY=your-secret-key-here-use-get_random_secret_key-to-generate
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=143.110.139.119,your-domain.com,www.your-domain.com,localhost

# ----------------------- DATABASE SETTINGS (PostgreSQL) -----------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=real_mfa_db
DB_USER=real_mfa_user
DB_PASSWORD=your_strong_password_here_123!@#
DB_HOST=localhost
DB_PORT=5432

# Optional: For remote database
# DB_HOST=xxx.xxx.xxx.xxx

# ----------------------- REDIS SETTINGS (Cache & Celery) -----------------------
REDIS_URL=redis://127.0.0.1:6379/0
CACHE_URL=redis://127.0.0.1:6379/1

# ----------------------- CELERY SETTINGS (Background Tasks) -----------------------
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# ----------------------- EMAIL SETTINGS -----------------------
# Gmail Setup:
# 1. Enable 2FA on Gmail account
# 2. Create App Password: https://myaccount.google.com/apppasswords
# 3. Use App Password below (NOT your regular Gmail password)

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-16-char-password

# Alternative: SendGrid
# EMAIL_BACKEND=sendgrid_backend.SendgridBackend
# SENDGRID_API_KEY=your-sendgrid-api-key

# ----------------------- FRONTEND URLS -----------------------
FRONTEND_URL=https://your-domain.com
FRONTEND_CALLBACK_URL=https://your-domain.com/auth/callback

# ----------------------- SECURITY SETTINGS -----------------------
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:3000
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ----------------------- CORS SETTINGS -----------------------
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# ----------------------- JWT/AUTH SETTINGS -----------------------
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# ----------------------- OTP/MFA SETTINGS -----------------------
OTP_DIGITS=6
OTP_TIME_WINDOW=300
TOTP_WINDOW=5
MFA_VALIDATION_TIMEOUT=600

# ----------------------- AWS S3 (Optional - for media storage) -----------------------
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ----------------------- LOGGING SETTINGS -----------------------
LOG_LEVEL=INFO
LOG_FILE=/var/log/real_mfa/django.log

# ----------------------- RATE LIMITING -----------------------
RATE_LIMIT_OTP=6/hour
RATE_LIMIT_LOGIN=10/hour
RATE_LIMIT_API=100/hour

# ----------------------- SENTRY (Error Tracking - Optional) -----------------------
USE_SENTRY=False
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------------- DEVELOPMENT ONLY (Remove in Production) -----------------------
# DEBUG=True
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
